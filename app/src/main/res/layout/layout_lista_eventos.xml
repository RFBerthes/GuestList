<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvListaNomeEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:hint="@string/txtNomeEvento"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvListaDataEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:hint="@string/txtData"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvHoraEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:hint="@string/txtHorario"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvLocalEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:hint="@string/txtLocalEvento"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvRespEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:hint="@string/txtResp"
        android:textColor="#fff"
        android:textSize="20sp" />


</LinearLayout>